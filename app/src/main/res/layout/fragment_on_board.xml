<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLUE"
    tools:context=".fragment.OnBoardFragment">

    <ImageView
        android:id="@+id/panel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:background="@color/purple_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="79dp"
        android:layout_height="67dp"
        android:src="@drawable/wallet"
        app:layout_constraintBottom_toBottomOf="@id/panel"
        app:layout_constraintLeft_toLeftOf="@id/panel"
        app:layout_constraintRight_toRightOf="@id/panel"
        app:layout_constraintTop_toTopOf="@id/panel" />


    <TextView
        android:id="@+id/text"
        android:layout_width="240dp"
        android:layout_height="28dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Text
        android:id="@+id/text2"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginBottom="110dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="Managing your money can be  the easiest thing you do all day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>